<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>org.wso2</groupId>
        <artifactId>wso2</artifactId>
        <version>1</version>
        <relativePath/>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.wso2.analytics</groupId>
    <artifactId>carbon-analytics</artifactId>
    <packaging>pom</packaging>
    <version>2.0.0-SNAPSHOT</version>
    <name>carbon-analytics</name>


    <modules>
        <module>components/analytics-dataservice</module>
        <module>components/analytics-datasources</module>
        <module>components/analytics-processor</module>
        <module>components/analytics-indexer</module>
        <module>components/analytics-api</module>
    </modules>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>commons-logging</groupId>
                <artifactId>commons-logging</artifactId>
                <version>${commons.logging.version}</version>
            </dependency>
            <dependency>
                <groupId>commons-collections</groupId>
                <artifactId>commons-collections</artifactId>
                <version>${commons.collections.version}</version>
            </dependency>
            <dependency>
                <groupId>com.google.guava</groupId>
                <artifactId>guava</artifactId>
                <version>${guava.version}</version>
            </dependency>

            <!-- Analytics dataservice dependencies -->
            <dependency>
                <groupId>com.esotericsoftware</groupId>
                <artifactId>kryo-shaded</artifactId>
                <version>${kryo.version}</version>
            </dependency>

            <!-- Spark related dependencies-->
            <dependency>
                <groupId>org.apache.spark</groupId>
                <artifactId>spark-core_2.11</artifactId>
                <version>${spark.version}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.spark</groupId>
                <artifactId>spark-sql_2.11</artifactId>
                <version>${spark.version}</version>
            </dependency>

            <!-- DAL dependencies -->
            <dependency>
                <groupId>org.apache.hadoop</groupId>
                <artifactId>hadoop-client</artifactId>
                <version>${hadoop-version}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.hbase</groupId>
                <artifactId>hbase-shaded-client</artifactId>
                <version>${hbase.version}</version>
            </dependency>

            <!-- child module dependencies-->
            <dependency>
                <groupId>org.wso2.analytics</groupId>
                <artifactId>org.wso2.analytics.dataservice</artifactId>
                <version>${analytics.version}</version>
            </dependency>
            <dependency>
                <groupId>org.wso2.analytics</groupId>
                <artifactId>org.wso2.analytics.data.commons</artifactId>
                <version>${analytics.version}</version>
            </dependency>
            <dependency>
                <groupId>org.wso2.analytics</groupId>
                <artifactId>org.wso2.analytics.indexer</artifactId>
                <version>${analytics.version}</version>
            </dependency>
            <dependency>
                <groupId>org.wso2.analytics</groupId>
                <artifactId>org.wso2.analytics.datasource.rdbms</artifactId>
                <version>${analytics.version}</version>
            </dependency>

            <!-- Testing related dependencies -->
            <dependency>
                <groupId>org.testng</groupId>
                <artifactId>testng</artifactId>
                <version>${testng.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-release-plugin</artifactId>
                <configuration>
                    <preparationGoals>clean install</preparationGoals>
                    <autoVersionSubmodules>true</autoVersionSubmodules>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-deploy-plugin</artifactId>
            </plugin>
        </plugins>
    </build>

    <properties>
        <!-- WSO2 dependencies (alphabetical) -->
        <analytics.version>2.0.0-SNAPSHOT</analytics.version>

        <!-- Project dependencies (alphabetical) -->
        <commons.collections.version>3.0</commons.collections.version>
        <commons.logging.version>1.2</commons.logging.version>
        <guava.version>19.0</guava.version>
        <hadoop-version>2.7.2</hadoop-version>
        <hbase.version>1.2.0</hbase.version>
        <kryo.version>3.0.3</kryo.version>
        <spark.version>2.0.2</spark.version>
        <testng.version>6.8.21</testng.version>
    </properties>
</project>
